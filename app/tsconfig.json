{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "lib": ["es6", "es7"],
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "extends": "../tsconfig.json"
}